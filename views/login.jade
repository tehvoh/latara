extends layout

block content
  .main.container
      .centered
        form.col-md-8(method='POST' action='/login')
          h1.display-4.m-b-2 Log In
          div.form-group
            label(for='login') Username or Email
            input.form-control(type='text' id='email' placeholder='Username or email' name='username')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.btn.btn-primary(type='submit') Log in 
          a.link.btn.btn-primary(href="/posts") cancel 
