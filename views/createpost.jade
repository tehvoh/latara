extends default

block content
  div.container.new-post
    h3 Create New Post
    form(id="", method="post", action="/posts/new")
      div.file-upload
        label(style="display: block;") Header
        div.form-group.image-upload-wrap
            input.file-upload-input(type="file", name="header_image" onchange="readURL(this);" accept="image/*")
            div.drag-text
              h5 Drag and drop a file or select add image
          
        div.file-upload-content
            img.file-upload-image(src="#", alt="header image")
            div.image-title-wrap
              button(type="button", class="file-upload-btn"  onclick="$('.file-upload-input').trigger( 'click' )") Change Header image
      div.form-group.clearClass
        label Post Title
        input.form-control(type="text", name="title" placeholder="Title" required)
      div.form-group
        label Tags
        input.form-control(type="text", placeholder="Select associated tags")
      div.form-group
        label Post Content
        textarea.form-control(name="body", placeholder="Article body" required)
      button.btn.btn-success.btn-sm(type="submit") Create Post
